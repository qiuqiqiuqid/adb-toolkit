{
  "name": "adb-toolkit",
  "version": "1.0.0",
  "description": "ADB & Fastboot Toolkit with Scrcpy",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder --win",
    "pack": "electron-builder --dir"
  },
  "author": "ADB Toolkit",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.adbtoolkit.app",
    "productName": "ADB Toolkit",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    },
    "files": [
      "src/**/*",
      "bin/**/*",
      "assets/**/*"
    ],
    "extraResources": [
      {
        "from": "bin",
        "to": "bin",
        "filter": ["**/*"]
      }
    ]
  },
  "dependencies": {
    "electron-log": "^5.0.0"
  }
}
