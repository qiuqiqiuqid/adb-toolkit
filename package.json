{
  "name": "adb-toolkit",
  "version": "1.0.0",
  "description": "ADB & Fastboot Toolkit with Scrcpy",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder --win",
    "pack": "electron-builder --dir"
  },
  "author": "qiuqiqiuqid <3464767775@qq.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/qiuqiqiuqid/adb-toolkit.git"
  },
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.adbtoolkit.app",
    "productName": "ADB Toolkit",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "bin/**/*"
    ],
    "asarUnpack": [
      "bin/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "dir",
          "arch": ["x64"]
        }
      ]
    }
  },
  "dependencies": {
    "electron-log": "^5.0.0"
  }
}
